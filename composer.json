{
    "name": "pedros80/nrephp",
    "description": "php wrapper for National Railway Enquiries API",
    "authors": [
        {
            "name": "Peter Somerville",
            "email": "peterwsomerville@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Pedros80\\NREphp\\": "src",
            "Pedros80\\Build\\": "build"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "Tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "build": "php build/Builder.php && composer format",
        "stan": "php -d memory_limit=-1 vendor/bin/phpstan analyse --configuration ./phpstan-config.neon"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.12",
        "league/flysystem": "^3.10",
        "nette/php-generator": "^4.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5"
    }
}
